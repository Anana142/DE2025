<Application x:Class="DemoExamen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DemoExamen"
             StartupUri="Views/Windows/AuthorizationView.xaml">
    <Application.Resources>
        <Style TargetType="PasswordBox">
            <Setter Property="Width" Value="180px"/>
            <Setter Property="Height" Value="35px"/>
            <Setter Property="Margin" Value="10px"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="180px"/>
            <Setter Property="Height" Value="35px"/>
            <Setter Property="Margin" Value="10px"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="140px"/>
            <Setter Property="Height" Value="40px"/>
            <Setter Property="Margin" Value="10px"/>
        </Style>
    </Application.Resources>
</Application>
